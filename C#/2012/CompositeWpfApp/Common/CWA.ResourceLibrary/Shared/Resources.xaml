<ResourceDictionary
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    
    This file contains resources common for all controls and skins.
    
    -->

    
    <!--Common Brushes-->

    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent" />
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="Gray" />


    <!--Visual Style suppressing standard FocusVisualStyle-->

    <Style x:Key="FocuslessVisualStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate />
            </Setter.Value>
        </Setter>
    </Style>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/CWA.ResourceLibrary;component/Shared/DropDownButton.xaml"/>
        <ResourceDictionary Source="/CWA.ResourceLibrary;component/Shared/ImageRadioButton.xaml"/>
        <ResourceDictionary Source="/CWA.ResourceLibrary;component/Shared/Menu.xaml"/>
        <ResourceDictionary Source="/CWA.ResourceLibrary;component/Shared/TabControl.xaml"/>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>