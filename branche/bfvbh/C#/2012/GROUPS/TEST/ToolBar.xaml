<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Resources="clr-namespace:GROUPS.WPF.Resources.Resources;assembly=GROUPS.WPF.Resources">
    <ToolBar   x:Key="MainToolBar"
                Background="Transparent"
                VerticalAlignment="Center"
                DockPanel.Dock="Top"
                HorizontalAlignment="Right">
       <Button>
            <Button.Content>
                <StackPanel>
                    <Image Width="30" Height="30" HorizontalAlignment="Left" Source="/GROUPS.WPF.Resources;component/Resources/Images/App.ico"></Image>
                    <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" Text="{x:Static Resources:Language.SYSTEM_SAVE}"></TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
    </ToolBar>
</ResourceDictionary>